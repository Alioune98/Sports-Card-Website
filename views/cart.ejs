<%if(isAuth){%> <%- include('partials/header') %> <% }else{%>
<%-include('partials/authheader') %> <% } %>
<section class="h-100" style="background-color: #eee">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
          <div>
            <p class="mb-0">
              <span class="text-muted">Sort by:</span>
              <a href="#!" class="text-body"
                >price <i class="fas fa-angle-down mt-1"></i
              ></a>
            </p>
          </div>
        </div>
        <%for (let j = 0; j < sampleData.length; j++) {%>
        <div class="card rounded-3 mb-4">
          <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="col-md-2 col-lg-2 col-xl-2">
                <img
                  src="public/uploads/<%=sampleData[j].image %>"
                  class="img-fluid rounded-3"
                  alt="Cotton T-shirt"
                />
              </div>
              <div class="col-md-3 col-lg-3 col-xl-3">
                <p class="lead fw-normal mb-2"><%=sampleData[j].name %></p>
                <p>
                  <span class="text-muted">Grade:</span><%=sampleData[j].grade
                  %> <span class="text-muted">Cert:</span><%=sampleData[j].cert
                  %>
                </p>
              </div>
              <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                <!-- <button
                  class="btn btn-link px-2"
                  onclick="this.parentNode.querySelector('input[type=number]').stepDown()"
                >
                  <i class="fas fa-minus"></i>
                </button>

                <input
                  id="form1"
                  min="0"
                  name="quantity"
                  value="2"
                  type="number"
                  class="form-control form-control-sm"
                />

                <button
                  class="btn btn-link px-2"
                  onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
                >
                  <i class="fas fa-plus"></i>
                </button> -->
              </div>
              <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                <h5 class="mb-0">$<%=sampleData[j].price%></h5>
              </div>
              <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                <form action="/removefromcart" method="post">
                  <input
                    type="hidden"
                    name="id"
                    value="<%=sampleData[j].product_id%>"
                  />
                  <button
                    class="text-danger fas fa-trash fa-lg"
                    style="border: none"
                  ></button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <%}%>

        <div class="card">
          <div class="card-body">
            <form action="/checkout" method="POST">
              <button type="submit" class="btn btn-warning btn-block btn-lg">
                Proceed to Checkout
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- <form action="/logout?_method=DELETE" method="POST">
    <button type="submit" class="btn btn-dark logout-btn">Log Out</button>
  </form> -->
</section>

<%- include('partials/footer') %>
