</html>
<script>
  var emailList = [];

  function newsLetter() {
    
    const email = document.getElementById('footer-email');

    if (checkvalidateEmailAddress(email) == true) {
      if (!emailList.includes(email)) {
        emailList.push(email);
        alert("You have been signed up for the newsletter!");
      } else {
        alert("You have already signed up for the newsletter!");
      }
      email.value = "";
    } else {
      alert("Not a valid email!");
    }
  };

  function checkvalidateEmailAddress(emailAdress) {
    var validRegex = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/;

    if(emailAdress.value.match(validRegex)){
      return true
    }else {
      return false;
    }
  };
</script>